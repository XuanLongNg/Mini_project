html
html
    head
        title CodeMely
        meta(charset="utf-8")
        style. 
            #login_tab {
                margin:300px auto;
                width: 300px;
                height: 300px;
            }
            #login_false_0{
                display:none;
            }
            #login_false_1{
                display:none;
            }
        if(message == "Incorrect")
            style. 
                #login_false_0 {
                    display: block;
                } 
        else if(message == "enter your username and password")   
            style. 
                #login_false_1 {
                    display: block;
                }  
    body
        div#login_tab
            form(action="/sign_in", method="POST")
                label(for="username") Username:
                input#username(type="text" name = "username" value = username)
                br
                label(for="password") Password:
                input#password(type="password" name = "password")
                br
                button(type="submit") Submit
                p#login_false_0 Account or password incorrect
                p#login_false_1 Please enter your username and password
